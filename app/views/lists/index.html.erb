<div class="banner mb-4 f-center">
  <div class="text-center text-white">
    <p class="banner-typed-text">
      <span id="banner-typed-text"></span>
    </p>
  </div>
</div>

<div class="container">
  <div class="f-s-between mb-4">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-black'  %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-md-4 mb-4">
        <%= link_to list_path(list), class:'text-decoration-none' do %>
          <div class="card-category" style="background-image: url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : asset_path('list_background.png') %>)">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
