<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Save your favorite movies</h1>
  </div>
</div>

<div class="container py-4">
  <div class="d-flex align-items-center justify-content-between mb-5">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-dark'  %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:'text-decoration-none' do %>
          <div class="card-category" style="background-image: url(asset_path('list_background.jpg'))">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

</div>
