<div class="position-relative">
  <div class="card-category card-large" style="background-image: url(<%= asset_path('list_background.jpg')%>)">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container my-5">

  <div class="d-flex justify-content-between my-4">
    <div>
      <%= link_to "Add a movie", new_list_bookmark_path(@list), class: 'btn btn-dark' %>
    </div>
  </div>

  <div class="row my-2">
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="col-12 col-sm-6 mb-4">
        <div class="bg-white rounded shadow h-100 d-flex justify-content-between flex-column">
          <%= image_tag movie.poster_url, class: 'movie-img rounded-top' %>
          <div class="p-3 d-flex flex-column flex-grow-1">
            <strong><%= movie.title %> <span class="text-muted font-weight-normal">â€¢ <%= movie.rating %> <i class="fas fa-star text-warning"></i></span></strong>
            <small class="text-muted flex-grow-1"><%= movie.overview %></small>
            <div class="d-flex align-items-end justify-content-between pt-4">
              <div>
                <i class="fas fa-quote-left mr-2"></i><small class="flex-grow-1"><%= bookmark.comment %></small>
              </div>
              <small class="text-right flex-shrink-0">
                  <%= link_to 'delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: 'text-danger' %>
              </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
